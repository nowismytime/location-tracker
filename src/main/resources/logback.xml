<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--included-->
    <property name="PROJECT_ID" value="redwing-email-service"/>
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/Users/tushar/logging.json</File>

        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"application":"locationTracker"}</customFields>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/Users/tushar/logging.%d{yyyy-MM-dd}.json</fileNamePattern>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
    </appender>
    <appender name="async" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="file" />
    </appender>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] %-5p %c{0} --##-- %m%n
            </pattern>
        </encoder>
    </appender>

    <logger name="org.dozer.config.GlobalSettings" level="error" />

    <logger name="org.jboss.logging" level="info" />
    <logger name="org.hibernate" level="error" />
    <logger name="org.springframework" level="warn" />
    <logger name="org.dozer" level="warn" />
    <logger name="org.apache" level="warn" />


    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="async" />
    </root>
    <!--/included-->
</configuration>